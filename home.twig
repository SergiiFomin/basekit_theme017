{% extends "layout.twig" %}

{% block content %}

<div class="bg-glow">
    
    <div class="global">

        <!--header-->
        <header>

            <div class="header">

                <div class="container">

                    <div class="row">

                        <article class="span12">

                            {{widget('logo', 'name', {"defaultlogo": asset('images/logo.png')})|raw}}
                            {{widget('extendednavigation', 'extendednavigation', {"align":"center"})|raw}}
                            {{widget('space', 'space', {'height': '30'})|raw}}

                        </article>

                    </div>

                </div>

            </div>

        </header>

        <div class="showcase">

            <div class="container">

                <div class="row">

                    <article class="span12">

                        {{widget('responsiveslideshow', 'responsiveslideshow', {'duration':'3', 'transSpeed': '1000', 'transType': 'fade', 'showButtons': true, 'showBullets': true, 'allowPause': true, 'allowLoop': true, 'images':[{'imageHeight':'450', 'imageWidth':'1170', 'url':'http://placehold.it/1170x450', 'title':'test title', 'description': 'test desc'},{'imageHeight':'450', 'imageWidth':'1170', 'url':'http://placehold.it/1170x450', 'title':'test title', 'description': 'test desc'},{'imageHeight':'450', 'imageWidth':'1170', 'url':'http://placehold.it/1170x450', 'title':'test title', 'description': 'test desc'},{'imageHeight':'450', 'imageWidth':'1170', 'url':'http://placehold.it/1170x450', 'title':'test title', 'description': 'test desc'}]})|raw}}        
                        {{widget('space', 'space', {'height': '30'})|raw}}

                    </article>

                </div>

            </div>

        </div>

        <div class="maintop">

            <div class="container">

                <div class="row">

                    <article class="span12">

                    </article>

                </div>

            </div>

        </div>

        <!--content-->

        <div class="container">

            <div class="row">

                <article class="span12">

                    {{zone('main')|raw}}
                    {{widget('space', 'space', {'height': '30'})|raw}}

                </article>

            </div>

        </div>

        <!--footer-->
        <footer>

            <div class="container">

                <div class="row">

                    <section class="span12">

                        <div class="row">

                            <article class="span8">

                                {{widget('companyname', 'companyname', {"business": "sushi bar"})|raw}}
                                {{widget('profile', 'copyright', { 'profileType':'profile' })|raw}}
                                {{widget('space', 'space', {'height': '30'})|raw}}

                            </article>

                            <article class="span4">

                                {{widget('socialicons', 'socialicons', {'googleplus': 'https://plus.google.com', 'linkedin':'http://www.linkedin.com', 'facebook': 'https://www.facebook.com', 'twitter': 'https://twitter.com', 'youtube': 'https://www.youtube.com', 'rss': '#'})|raw}}
                                {{widget('space', 'space', {'height': '30'})|raw}}

                            </article>

                        </div>

                    </section>

                </div>

            </div>

        </footer>

    </div>
    
</div>

{% endblock %}